<% if (email) { %>
<div class="account-pane">
    <div class="container">
        <div class="username">
            Welcome
            <strong>
                <% if (username) { %>
                <%=username%>
                <% } else { %>
                <%=email%>
                <% } %>
            </strong>

            <a href="/logout">Logout</a>
        </div>
    </div>
</div>
<% } %>
